<div class="wrapper">
  <div class="side-bar">
    <%= render "routines/side_bar" %>
  </div>
  <div class="other_routine">
    <%= render "shared/header" %>
    <div class="main">
      <div class="inner">
        <div class="form__wrapper">
          <h2 class="page-heading">新規Myroutineの追加</h2>
          <%= form_with model: @my_routine, local: true do |f|%>
            <div class="field">
              <%= f.label :routine_name, "タイトル" %><br />
              <%= f.text_field :routine_name, id:"routine_name" %>
            </div>

            <div class="field">
              <%= f.label :my_routine_content, "内容" %><br />
              <%= f.text_area :my_routine_content, class: :form__text, id:"my_routine_content" %>
            </div>

            <div class="field">
              <%= f.label :reason, "理由" %><br />
              <%= f.text_area :reason, class: :form__text, id:"reason" %>
            </div>

            <div class="field">
              <%= f.label :effect, "期待する効果" %><br />
              <%= f.text_area :effect, id:"effect" %>
            </div>

            <div class="actions">
              <%= f.submit "保存する", class: :form__btn  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>